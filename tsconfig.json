// https://github.com/tsconfig/bases/blob/694a3683ac2a85ee7cbe461a7510a4d794ff885b/bases/node20.json
{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
    "_version": "20.1.0",
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "module": "Preserve",
        "moduleResolution": "Bundler",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}
